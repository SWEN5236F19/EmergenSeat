WindowManager:
    GreetingScreen:
    LoginScreen:
    SignUpScreen:
    RegisterSeat:
    MemberArea:

<GreetingScreen>
    name: "greeting"

    FloatLayout:
        Label:
            text: "Welcome To EmergenSeat! \n            Your guardian angel"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {'center_x':.5, 'center_y':.7}
            size_hint: 0.35, 0.15
        Button:
            text: "Login "
            size_hint: 0.4, 0.12
            pos_hint: {'x':0.1, 'center_y':.5}
            on_release: app.root.current = 'login'
        Button:
            text: "Create Account "
            size_hint: 0.4, 0.12
            pos_hint: {'center_x':.7, 'y':0.44}
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = "right"


<LoginScreen>
    name: "login"
    email: email
    password: password

    FloatLayout:
        Label:
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            multiline:False
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.40 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            multiline:False
            password: True
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.40, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            text: "Submit "
            size_hint: 0.4, 0.12
            pos_hint: {'center_x':.5, 'y':0.40}
            on_release:
                root.manager.transition.direction = "up"
                root.checkCreds()
        Button:
            text: "Back "
            size_hint: 0.4, 0.12
            pos_hint: {'center_x':.5, 'y':0.25}
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = 'greeting'


<SignUpScreen>
    name: 'signup'
    usrFirstName: usrFirstName
    usrLastName: usrLastName
    usrPassword: usrPassword
    usrEmail: usrEmail

    FloatLayout:
        orientation: 'vertical'
        Label:
            text: "Sign up"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"center_x":.5, "center_y":.8}
        Label:
            text: "First Name: "
            size_hint: 0.25, 0.15
            pos_hint: {"x": 0.0, "top":0.75}

        TextInput:
            id: usrFirstName
            multiline:False
            pos_hint: {"x": 0.20, "top":0.7}
            size_hint: 0.50, 0.05

        Label:
            text: "Last Name: "
            size_hint: 0.25, 0.15
            pos_hint: {"x": 0.0, "top":0.65}

        TextInput:
            id: usrLastName
            multiline:False
            pos_hint: {"x": 0.20, "top":0.6}
            size_hint: 0.50, 0.05

        Label:
            text: "Email: "
            size_hint: 0.25, 0.15
            pos_hint: {"x": 0.0, "top":0.55}

        TextInput:
            id: usrEmail
            multiline:False
            pos_hint: {"x": 0.20, "top":0.5}
            size_hint: 0.50, 0.05

        Label:
            text: "Password: "
            size_hint: 0.25, 0.15
            pos_hint: {"x": 0.0, "top":0.45}

        TextInput:
            id: usrPassword
            multiline:False
            password: True
            pos_hint: {"x": 0.20, "top":0.4}
            size_hint: 0.50, 0.05

        Button:
            text: "Back "
            size_hint: 0.2, 0.10
            pos_hint: {'center_x':.60, 'y':0.20}
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = 'greeting'
        Button:
            text: "Submit "
            size_hint: 0.2, 0.10
            pos_hint: {'center_x':.30, 'y':0.20}
            on_release:
                root.manager.transition.direction = "left"
                root.sendnewUser()

<RegisterSeat>
    name: 'register'
    nameOfSeat: nameOfSeat
    serialNum: serialNum

    FloatLayout:
        orientation: 'vertical'
        Label:
            text: "Car Seat Registration"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"center_x":.5, "center_y":.8}
        Label:
            text: "Model Seat: "
            size_hint: 0.30, 0.15
            pos_hint: {"x": 0.0, "top":0.75}

        TextInput:
            id: nameOfSeat
            multiline:False
            pos_hint: {"x": 0.25, "top":0.7}
            size_hint: 0.50, 0.05

        Label:
            text: "Seat Serial Number: "
            size_hint: 0.25, 0.15
            pos_hint: {"x": 0.0, "top":0.65}

        TextInput:
            id: serialNum
            multiline:False
            pos_hint: {"x": 0.25, "top":0.6}
            size_hint: 0.50, 0.05

        Button:
            text: "Back "
            size_hint: 0.2, 0.10
            pos_hint: {'center_x':.60, 'y':0.20}
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = 'member'
        Button:
            text: "Submit "
            size_hint: 0.2, 0.10
            pos_hint: {'center_x':.30, 'y':0.20}
            on_release:
                root.manager.transition.direction = "up"
                root.sendCarSeat()

<MemberArea>
    name: 'member'

    FloatLayout:
        Label:
            text: "Member Area"
            font_size: 40
            pos_hint:{'center_x':.5, 'y':0.45}

        Button:
            text: "Logout "
            size_hint: 0.2, 0.10
            pos_hint: {'center_x':.65, 'y':0.20}
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = 'greeting'
        Button:
            text: "Register Seat "
            size_hint: 0.2, 0.10
            pos_hint: {'center_x':.30, 'y':0.20}
            on_release:
                root.manager.transition.direction = "up"
                app.root.current = 'register'
